      // æ¸²æŸ“æ¸¸æˆåˆ—è¡¨
      const gamesGrid = document.getElementById('games-grid');
      if (gamesGrid) {
        if (games.length === 0) {
          gamesGrid.innerHTML = '<p style="text-align: center; color: var(--color-text-secondary);">æš‚æ— æ¸¸æˆè®°å½•</p>';
        } else {
          const renderCard = (game) => {
            const dateLines = [
              game.startDate ? `å¼€å§‹: ${game.startDate}` : '',
              game.completedDate ? `å®Œæˆ: ${game.completedDate}` : '',
