  }

  .group-section {
    margin-bottom: 3rem;
  }

  .group-title {
    margin: 0 0 1.5rem;
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .group-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 1rem;
  }

  @media (max-width: 768px) {
    .stats-summary {
      gap: 1rem;
    }

    .stat-item {
      flex: 1 1 calc(50% - 0.5rem);
      min-width: 100px;
    }

    .group-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script is:inline define:vars={{ base }}>
  async function loadSeries() {
    try {
      const response = await fetch('/api/series');
      if (!response.ok) {
        throw new Error('Failed to fetch series');
      }

      const data = await response.json();
      const series = data.series;

      // æ›´æ–°ç»Ÿè®¡
      const totalSeries = series.length;
      const completedSeries = series.filter(s => s.completedDate).length;
      const avgRating = totalSeries > 0
        ? (series.reduce((sum, s) => sum + s.rating, 0) / totalSeries).toFixed(1)
        : 0;

      const statsDiv = document.getElementById('stats-summary');
      if (statsDiv) {
        statsDiv.innerHTML = `
          <div class="stat-item">
            <span class="stat-value">${totalSeries}</span>
            <span class="stat-name">æ€»å‰§é›†æ•°</span>
          </div>
          <div class="stat-item">
            <span class="stat-value">${completedSeries}</span>
            <span class="stat-name">å·²å®Œæˆ</span>
          </div>
          <div class="stat-item">
            <span class="stat-value">${avgRating} â­</span>
            <span class="stat-name">å¹³å‡è¯„åˆ†</span>
          </div>
        `;
      }

      // åˆ†ç»„
      const inProgressSeries = series.filter(s => s.startDate && !s.completedDate);
      const notStartedSeries = series.filter(s => !s.startDate && !s.completedDate);
      const completedSeriesList = series.filter(s => s.completedDate);

      // æ¸²æŸ“å‰§é›†åˆ—è¡¨
      const seriesGrid = document.getElementById('series-grid');
      if (seriesGrid) {
        if (series.length === 0) {
          seriesGrid.innerHTML = '<p style="text-align: center; color: var(--color-text-secondary);">æš‚æ— å‰§é›†è®°å½•</p>';
        } else {
          const renderCard = (item) => {
            const dateLines = [
              item.startDate ? `å¼€å§‹: ${item.startDate}` : '',
              item.completedDate ? `å®Œæˆ: ${item.completedDate}` : '',
            ].filter(Boolean);

            return `
              <a href="${base}/series/${item.slug}" class="card">
                ${item.cover ? `<img src="${item.cover}" alt="${item.title}" class="card-cover" />` : ''}
                <div class="card-content">
                  <h2>
                    ${item.title}
                    ${item.favorite ? '<span class="favorite-badge">â¤ï¸ æœ€çˆ±</span>' : ''}
                  </h2>
                  <div class="card-rating">${'â­'.repeat(item.rating)}</div>
                  <div class="card-meta">${item.status}</div>
                  ${dateLines.length > 0 ? `<div class="card-meta">ğŸ“… ${dateLines.join(' Â· ')}</div>` : ''}
                  ${item.tags.length > 0 ? `
                    <div class="card-tags">
                      ${item.tags.map(tag => `<span class="tag">${tag}</span>`).join('')}
                    </div>
                  ` : ''}
                </div>
              </a>
            `;
          };

          const renderSection = (title, list) => {
            if (list.length === 0) return '';
            return `
              <section class="group-section">
                <h2 class="group-title">${title}</h2>
                <div class="group-grid">
                  ${list.map(renderCard).join('')}
                </div>
              </section>
            `;
          };

          seriesGrid.innerHTML = `
            ${renderSection('è¿›è¡Œä¸­', inProgressSeries)}
            ${renderSection('æœªå¼€å§‹', notStartedSeries)}
            ${renderSection('å·²å®Œæˆ', completedSeriesList)}
          `;
        }
        seriesGrid.style.display = 'block';
      }

      document.getElementById('loading')?.remove();
    } catch (error) {
      console.error('Error loading series:', error);
      const errorDiv = document.getElementById('error');
      if (errorDiv) {
        errorDiv.textContent = 'åŠ è½½å¤±è´¥ï¼Œè¯·åˆ·æ–°é‡è¯•';
        errorDiv.style.display = 'block';
      }
      document.getElementById('loading')?.remove();
    }
  }

  // é¡µé¢åŠ è½½æ—¶è·å–æ•°æ®
  loadSeries();
</script>
