<style is:global>
  .page-header {
    margin-bottom: 2rem;
  }

  .stats-summary {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
    margin-top: 1.5rem;
    padding: 1.5rem;
    background-color: var(--color-bg-secondary);
    border-radius: var(--radius);
  }

  .stat-item {
    display: flex;
