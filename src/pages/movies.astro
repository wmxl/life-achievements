      }

      const data = await response.json();
      const movies = data.movies;

      // æ›´æ–°ç»Ÿè®¡
      const totalMovies = movies.length;
      const completedMovies = movies.filter(m => m.completedDate).length;
      const avgRating = totalMovies > 0
